<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:baselineAligned="false"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/titulo_pull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo do Pull Request"
                android:layout_alignParentLeft="true"
                android:paddingRight="5dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descricao_pull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/titulo_pull"
                android:paddingRight="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="RxJava – Reactive Extensions for the JVM – a library for composing asynchronous and event-based programs using observable sequences for the Java VM."
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/foto_autor_pull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descricao_pull"
                android:adjustViewBounds="true"
                android:contentDescription="@string/description_image"
                android:cropToPadding="true"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:scaleType="fitEnd"
                android:paddingTop="5dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/username_pull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descricao_pull"
                android:layout_toRightOf="@+id/foto_autor_pull"
                android:paddingTop="27dp"
                android:paddingLeft="5dp"
                android:text="username"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/date_pull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_pull"
                android:layout_toRightOf="@+id/foto_autor_pull"
                android:paddingTop="2dp"
                android:paddingLeft="5dp"
                android:text="Criado em 29/10/2017"
                android:textAlignment="textEnd"
                android:textSize="8sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>