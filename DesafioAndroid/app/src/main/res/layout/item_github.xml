<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:baselineAligned="false"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/nome_repositorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Repositório"
                android:layout_alignParentLeft="true"
                android:paddingRight="5dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descricao_repositorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/foto_autor"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/nome_repositorio"
                android:paddingRight="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="RxJava – Reactive Extensions for the JVM – a library for composing asynchronous and event-based programs using observable sequences for the Java VM."
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/img_fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descricao_repositorio"
                android:paddingTop="20dp"
                android:src="@drawable/fork18pxyellow" />

            <TextView
                android:id="@+id/fork_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descricao_repositorio"
                android:layout_toRightOf="@id/img_fork"
                android:paddingTop="28dp"
                android:text="640"
                android:textColor="@color/yellowfork"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/img_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descricao_repositorio"
                android:layout_toRightOf="@id/fork_count"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/star18pxyellow" />

            <TextView
                android:id="@+id/star_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descricao_repositorio"
                android:layout_toRightOf="@id/img_star"
                android:paddingTop="28dp"
                android:text="1250"
                android:textColor="@color/yellowfork"
                android:textSize="8sp" />


            <!--<RelativeLayout-->
            <!--android:id="@+id/relativeLayout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toEndOf="@+id/nome_repositorio"-->
            <!--android:layout_alignParentTop="true">-->


            <ImageView
                android:id="@+id/foto_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/description_image"
                android:cropToPadding="true"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:scaleType="fitEnd"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/foto_autor"
                android:paddingTop="8dp"
                android:text="username"
                android:textAlignment="textEnd"
                android:textSize="13sp" />
        </RelativeLayout>

        <!--</RelativeLayout>-->

    </android.support.v7.widget.CardView>

</LinearLayout>
